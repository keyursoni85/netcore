
@model Application.Entities.Test
@{
    ViewBag.PageTitle = "Demo Project - Add Test";
}

<link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
<link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker3.css" rel="stylesheet" />
<style>
    .form-control {
        border: 1px solid #ced4da !important;
    }
</style>
@using (Html.BeginForm("CreateTest", "Home", FormMethod.Post, new { @class = "form-loading form_submit", id = "SaveTest" }))
{
    <div class="modal-header">
        <h4 class="modal-title">Create Test</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Test</label>
            <input asp-for="TestId" type="hidden" class="form-control" />
            <div class="col-sm-9">
                @{
                    var mailList = new List<SelectListItem>();
                    mailList.Add(new SelectListItem { Text = "Cooper test", Value = "1" });
                    mailList.Add(new SelectListItem { Text = "100 meter test", Value = "2" });
                }
                @Html.DropDownList("TestTypeId", mailList, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Date</label>
            <div class="col-sm-9">
                <input asp-for="TestDate" class="form-control datePicker" maxlength="50" placeholder="Date" type="text" autocomplete="off" />
                <span asp-validation-for="TestDate" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary btn_f_submit" id="Add" type="submit">Create Test</button>
    </div>
}
<script type="text/javascript" src="~/lib/jquery/js/jquery.min.js"></script>
<script type="text/javascript" src="~/lib/bootstrap/js/bootstrap.js"></script>
<script type="text/javascript" src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js" type="text/javascript"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" type="text/javascript"></script>
<script>
    $('.datePicker').datepicker({
        format: 'yyyy/mm/dd',
        autoclose: true,
    });
    $(".datePicker").datepicker().datepicker("setDate", new Date());
</script>
